# Apple Health Analyzer Configuration

# Environment (dev/prod)
ENVIRONMENT=dev

# Debug mode (true/false)
DEBUG=true

# Paths
EXPORT_XML_PATH=../export_data/export.xml
OUTPUT_DIR=./output

# Data source priorities (higher number = higher priority)
APPLE_WATCH_PRIORITY=3
XIAOMI_HEALTH_PRIORITY=2
IPHONE_PRIORITY=1

# Logging
LOG_LEVEL=INFO
LOG_FILE=./logs/health_analyzer.log

# Performance settings
BATCH_SIZE=1000
MEMORY_LIMIT_MB=500

# Optional: OpenAI API for AI analysis
# OPENAI_API_KEY=your-openai-api-key-here

# Optional: Anthropic API for Claude analysis
# ANTHROPIC_API_KEY=your-anthropic-api-key-here

# Optional: Google Gemini API
# GEMINI_API_KEY=your-gemini-api-key-here
