{
  "version": "0.2.0",
  "configurations": [
    {
      "name": "Python: 当前文件",
      "type": "debugpy",
      "request": "launch",
      "program": "${file}",
      "console": "integratedTerminal",
      "justMyCode": true,
      "python": "./.venv/Scripts/python.exe"
    },
    {
      "name": "Python: 主模块",
      "type": "debugpy",
      "request": "launch",
      "program": "${workspaceFolder}/src/cli.py",
      "args": [
        "--help"
      ],
      "console": "integratedTerminal",
      "justMyCode": true,
      "python": "./.venv/Scripts/python.exe"
    },
    {
      "name": "Python: 解析命令",
      "type": "debugpy",
      "request": "launch",
      "program": "${workspaceFolder}/src/cli.py",
      "args": [
        "parse",
        "./export_data/export.xml",
        "--preview"
      ],
      "console": "integratedTerminal",
      "justMyCode": true,
      "python": "./.venv/Scripts/python.exe",
      "cwd": "${workspaceFolder}"
    },
    {
      "name": "Python: 信息命令",
      "type": "debugpy",
      "request": "launch",
      "program": "${workspaceFolder}/src/cli.py",
      "args": [
        "info",
        "./export_data/export.xml"
      ],
      "console": "integratedTerminal",
      "justMyCode": true,
      "python": "./.venv/Scripts/python.exe",
      "cwd": "${workspaceFolder}"
    },
    {
      "name": "Python: 运行测试",
      "type": "debugpy",
      "request": "launch",
      "module": "pytest",
      "args": [
        "tests/",
        "-v",
        "--tb=short"
      ],
      "console": "integratedTerminal",
      "justMyCode": true,
      "python": "./.venv/Scripts/python.exe"
    },
    {
      "name": "Python: 调试特定测试",
      "type": "debugpy",
      "request": "launch",
      "module": "pytest",
      "args": [
        "${file}",
        "-v",
        "--tb=short",
        "-k",
        "${selectedText}"
      ],
      "console": "integratedTerminal",
      "justMyCode": true,
      "python": "./.venv/Scripts/python.exe"
    }
  ]
}